<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.CategoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linerr"
        android:gravity="center_horizontal">


        <Button
            android:id="@+id/skipped"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:backgroundTint="@color/red"
            android:foregroundGravity="center_horizontal"
            android:gravity="center"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:paddingRight="20dp"
            android:text="Hire Me"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/skippede"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginVertical="30dp"
            android:backgroundTint="@color/red"
            android:foregroundGravity="center_horizontal"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:text="Get RESUME"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/mainLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linerr"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi ! My Name is Jainendra Singh, I'm a Creative Geek "
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="12dp"
            android:textStyle="bold"/>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingStart="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="And I'm "
            android:id="@+id/textone"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:fontFamily="@font/poppins_medium"
            android:textSize="13dp"
            android:textStyle="bold"/>

    <com.nitish.typewriterview.TypeWriterView
        android:id="@+id/typeWriterView"
        android:layout_width="300dp"
        android:textColor="@color/red"
        android:textSize="16dp"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:layout_toRightOf="@id/textone"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        />

</RelativeLayout>



    </LinearLayout>

    <RelativeLayout
        android:id="@+id/slideRL"
        android:layout_width="match_parent"
        android:layout_below="@id/mainLL"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:elevation="50dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="13dp"
            app:cardMaxElevation="20dp"
            app:cardPreventCornerOverlap="true">



<TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="@string/maintextt"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:textSize="13.7dp"
    android:padding="11dp">

</TextView>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:id="@+id/linearrbar"
        android:layout_below="@id/slideRL"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <androidx.cardview.widget.CardView
            android:id="@+id/allProductsBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:checkable="true"
            android:clickable="true"
            app:cardBackgroundColor="@color/home_background"
            android:focusable="true"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Media -->
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:contentDescription="string/content_description_media"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/paintbrush" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <!-- Title, secondary and supporting text -->
                    <TextView
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Blogging"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/hint_textcolor"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/beveragesBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:checkable="true"
            android:clickable="true"
            app:cardBackgroundColor="@color/home_background"
            android:elevation="100dp"
            android:focusable="true"
            app:cardCornerRadius="15dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Media -->
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:contentDescription="string/content_description_media"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/code" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <!-- Title, secondary and supporting text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Development"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/hint_textcolor"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/bakeryBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/home_background"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Media -->
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:contentDescription="string/content_description_media"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/freelancing" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <!-- Title, secondary and supporting text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Freelancing"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/hint_textcolor"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>